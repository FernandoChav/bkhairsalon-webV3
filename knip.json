{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": [
    "src/**/*.{js,ts,jsx,tsx}",
    "next.config.*",
    "tailwind.config.*",
    "postcss.config.*"
  ],
  "project": [
    "src/**/*.{js,ts,jsx,tsx}",
    "!src/**/*.d.ts"
  ],
  "ignore": [
    "**/*.d.ts",
    "**/*.config.*",
    "**/node_modules/**",
    "**/.next/**",
    "**/out/**",
    "**/build/**",
    "**/dist/**",
    "src/components/shadcn/**"
  ],
  "ignoreDependencies": [
    "qs",
    "lint-staged",
    "eslint-config-next",
    "tailwindcss-animate",
    "tw-animate-css",
    "@tanstack/eslint-plugin-query"
  ],
  "ignoreExportsUsedInFile": true,
  "includeEntryExports": true
}