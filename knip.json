{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": [
    "src/app/**/*.{js,ts,jsx,tsx}",
    "src/pages/**/*.{js,ts,jsx,tsx}",
    "next.config.*",
    "tailwind.config.*",
    "postcss.config.*"
  ],
  "project": ["src/**/*.{js,ts,jsx,tsx}", "!src/**/*.d.ts"],
  "ignore": [
    "**/*.d.ts",
    "**/*.config.*",
    "**/node_modules/**",
    "**/.next/**",
    "**/out/**",
    "**/build/**",
    "**/dist/**"
  ],
  "ignoreDependencies": [
    "@types/node",
    "@types/react",
    "@types/react-dom",
    "eslint",
    "prettier",
    "husky",
    "lint-staged"
  ],
  "ignoreExportsUsedInFile": true,
  "includeEntryExports": true
}
